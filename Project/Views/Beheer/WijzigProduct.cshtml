@model Project.Models.MainView
@{
    ViewBag.Title = "WijzigProduct";
}

<div class="prod_box_big">
    <div class="top_prod_box_big"></div>
    <div class="center_prod_box_big">
        <div class="product_title_big">Product Wijzigen</div>

@using (Html.BeginForm("WijzigProduct", "Beheer"))
{
    @Html.HiddenFor(model => model.DetailProduct.ID)
    <div class="editor-label">Naam</div>
    <div class="editor-field">@Html.EditorFor(model => model.DetailProduct.Naam)
                              @Html.ValidationMessageFor(model => model.DetailProduct.Naam)</div>
    <div class="editor-label">Voorraad</div>
    <div class="editor-field">@Html.EditorFor(model => model.DetailProduct.Voorraad)
                              @Html.ValidationMessageFor(model => model.DetailProduct.Voorraad)</div>
    <div class="editor-label">Prijs</div>
    <div class="editor-field">@Html.EditorFor(model => model.DetailProduct.Prijs)
                              @Html.ValidationMessageFor(model => model.DetailProduct.Prijs)</div>
    <div class="editor-label">Beschrijving</div>
    <div class="editor-field">@Html.EditorFor(model => model.DetailProduct.Beschrijving)
                              @Html.ValidationMessageFor(model => model.DetailProduct.Beschrijving)</div>
    <div class="editor-label">Merk</div>
    <div class="editor-field">@Html.DropDownListFor(model => model.SelectedMerkID, Model.Merken)
                              @Html.ValidationMessageFor(model => model.SelectedMerkID)  </div>
    <div class="editor-label">Categorie</div>
    <div class="editor-field">@Html.DropDownListFor(model => model.SelectedCategorieID, Model.Categorieen)
                              @Html.ValidationMessageFor(model => model.SelectedCategorieID)  </div>
    <p>
    <input type="submit" value="Opslaan" />
    </p>
    <p><a href="/Beheer/WijzigThumb?pid=@Model.DetailProduct.ID" style="text-align: right; height: 27px; background-color: white; width: 195px; line-height: 27px; color: #1c4a52; border-radius: 10px; padding: 7px; text-decoration:none;">Wijzig afbeelding</a></p>
    <p><a href="/Beheer/Producten" style="text-align: right; height: 27px; background-color: white; width: 195px; line-height: 27px; color: #1c4a52; border-radius: 10px; padding: 7px; text-decoration:none;">Vorige</a></p>
}
                    </div>
    <div class="bottom_prod_box_big"></div>                   
</div>