@model Project.Models.MainView
           
@{
    ViewBag.Title = "BekijkProducten";
}
@{ double totaal = 0.0; }

<div class="prod_box_big">
    <div class="top_prod_box_big"></div>
    <div class="center_prod_box_big">
        <div class="product_title_big">Producten</div>

<table class="beheertab" style="width: 100%">
    
    <thead>
        <tr>
        <th>Productnaam</th>
        <th>Aantal</th>
        <th>Totaalbedrag</th>
        </tr>
     </thead>
     <tbody>
    @for (int i = 0; i < Model.ListOrderViewModel.Count; i++)
    {
        <tr>
            <td>@Model.ListOrderViewModel[i].Orderregel.ProductNaam</td>
            <td>@Model.ListOrderViewModel[i].Orderregel.Aantal</td>
            <td>@Model.ListOrderViewModel[i].Orderregel.Subtotaal</td>
            @{ totaal = @Model.ListOrderViewModel[i].Order.Totaal; }
        </tr>
    }
   <tr></tr>
   <tr></tr>
   <tr></tr>
    <tr ><td>Totaal</td>
        <td></td>
        <td>@totaal</td>
    </tr>
    </tbody>
</table>

<p><a href="/Beheer/Bestellingen?klantID=@Model.ListOrderViewModel[0].Order.Gebruiker" style="text-align: right; height: 27px; background-color: white; width: 195px; line-height: 27px; color: #1c4a52; border-radius: 10px; padding: 7px; text-decoration:none;">Vorige</a></p>
    </div>
    <div class="bottom_prod_box_big"></div>                   
</div>