@model Project.Models.MainView

@{
    ViewBag.Title = "WijzigStatus";
}


<div class="prod_box_big">
    <div class="top_prod_box_big"></div>
    <div class="center_prod_box_big">
        <div class="product_title_big">Bestelstatus wijzigen</div>

        @using (Html.BeginForm("WijzigStatus", "Beheer"))
        {
          @Html.HiddenFor(model=>model.order.ID)
          @Html.HiddenFor(model => model.order.Gebruiker);  
        <div class = "editor-label">Ordernummer</div>
        <div class = "editor-label">@Model.order.ID</div>
        <div class = "editor-label">Status</div>
        <div class = "editor-field">@Html.DropDownListFor(model => model.SelectedStatusID, Model.Statussen)</div>
        <p><input type = "submit" value = "Opslaan" /></p>


        }
<p><a href="/Beheer/Bestellingen?klantID=@Model.order.Gebruiker" style="text-align: right; height: 27px; background-color: white; width: 195px; line-height: 27px; color: #1c4a52; border-radius: 10px; padding: 7px; text-decoration:none;">Vorige</a></p>
</div>
    <div class="bottom_prod_box_big"></div>                   
</div>