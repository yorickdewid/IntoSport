@model Project.Models.MainView
           
@{
    ViewBag.Title = "Klanten";
}

<div class="prod_box_big">
    <div class="top_prod_box_big"></div>
    <div class="center_prod_box_big">
        <div class="product_title_big">Klanten</div>

<table class="beheertab" style="width:100%">
        <thead>
            <tr>
                <th>Naam</th>
                <th>Email</th>
                <th>Type</th>
                <th>Wijzig</th>
                <th>Verwijder</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.ListGebruiker.Count; i++)
            {
                <tr>
                    <td>@Model.ListGebruiker[i].Naam
                    </td>
                    <td>@Model.ListGebruiker[i].Email
                    </td>
                    <td>@Model.ListGebruiker[i].Type
                    </td>
                    <td><a href="/Beheer/WijzigKlant?kid=@Model.ListGebruiker[i].ID" style="text-decoration: none; color: #1c4a52;">Wijzig</a></td>
                    @if(Model.ListGebruiker[i].Actief)
                    {
                          <td><a href="#" onclick="bevestigkeus('/Beheer/VerwijderKlant?kid=@Model.ListGebruiker[i].ID')" style="text-decoration: none; color: #1c4a52;">Verwijder</a></td>
                    }else{
                        <td>Verwijderd</td>
                    }
                </tr>                      
            }
        </tbody>
    </table>
    
    <p><a href="/Beheer/" style="text-align: right; height: 27px; background-color: white; width: 195px; line-height: 27px; color: #1c4a52; border-radius: 10px; padding: 7px; text-decoration:none;">Vorige</a></p>
          </div>
    <div class="bottom_prod_box_big"></div>                   
</div>