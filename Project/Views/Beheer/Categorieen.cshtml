@model Project.Models.MainView
@{
    ViewBag.Title = "Categorieën";
}

<div class="prod_box_big">
    <div class="top_prod_box_big"></div>
    <div class="center_prod_box_big">
        <div class="product_title_big">Categorieen</div>
        <table class="beheertab" style="width: 100%">
            <thead>
                <tr>
                    <th>Categorie</th>
                    <th>Wijzig</th>
                    <th>Verwijder</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.ListCategorie.Count; i++)
                {
                    <tr>
                        <td>@Model.ListCategorie[i].Naam</td>
                        <td><a href="/Beheer/WijzigCategorie?cid=@Model.ListCategorie[i].ID" style="text-decoration: none; color: #1c4a52;">Wijzig</a></td>
                        @if (@Model.ListCategorie[i].Actief)
                        {
                            <td><a href="#" onclick="bevestigkeus('/Beheer/VerwijderCategorie?cid=@Model.ListCategorie[i].ID')" href="/Beheer/VerwijderCategorie?cid=@Model.ListCategorie[i].ID" style="text-decoration: none; color: #1c4a52;">Verwijder</a></td>
                        }
                        else
                        {
                            <td>Verwijderd</td>
                        }
                    </tr>                      
                }<tr>
                <td><a href="/Beheer/ToevoegenCategorie/" style="text-align: right; height: 27px; background-color: white; width: 195px; line-height: 27px; color: #1c4a52; border-radius: 10px; padding: 7px; text-decoration: none;">Toevoegen</a></td>
            </tr>
            </tbody>
        </table>


        <p><a href="/Beheer/" style="text-align: right; height: 27px; background-color: white; width: 195px; line-height: 27px; color: #1c4a52; border-radius: 10px; padding: 7px; text-decoration: none;">Vorige</a></p>
    </div>
    <div class="bottom_prod_box_big"></div>
</div>
