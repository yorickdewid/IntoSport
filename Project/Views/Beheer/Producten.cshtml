@model Project.Models.MainView
@{
    ViewBag.Title = "Producten";
}

<div class="prod_box_big">
    <div class="top_prod_box_big"></div>
    <div class="center_prod_box_big">
        <div class="product_title_big">Productbeheer</div>

<table class="beheertab" style="width: 100%">
        <thead>
            <tr>
                <th>Product</th>
                <th>Wijzig</th>
                <th>Afbeelding</th>
                <th>Verwijder</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.ListProduct.Count; i++)
            {
                <tr>
                    <td><a href="/Product/Detail?pid=@Model.ListProduct[i].ID" style="text-decoration: none; color: #1c4a52;">@Model.ListProduct[i].Naam</a>
                    </td>
                    <td><a href="/Beheer/WijzigProduct?pid=@Model.ListProduct[i].ID" style="text-decoration: none; color: #1c4a52;">Wijzig</a></td>
                    <td><a href="/Beheer/WijzigThumb?pid=@Model.ListProduct[i].ID" style="text-decoration: none; color: #1c4a52;">Wijzig</a></td>
                    @if (Model.ListProduct[i].Actief)
                    {
                    <td><a href="/Beheer/ZetProductNonActief?pid=@Model.ListProduct[i].ID" style="text-decoration: none; color: #1c4a52;">Verwijder</td>
                    }
                    else
                    {
                    <td>Verwijderd</td>
                    }
                </tr>                      
            }<tr>
                <td><a href="/Beheer/ToevoegenProduct/" style="text-align: right; height: 27px; background-color: white; width: 195px; line-height: 27px; color: #1c4a52; border-radius: 10px; padding: 7px; text-decoration:none;">Toevoegen</a></td>
            </tr>
        </tbody>
    </table>
    
    <p><a href="/Beheer/" style="text-align: right; height: 27px; background-color: white; width: 195px; line-height: 27px; color: #1c4a52; border-radius: 10px; padding: 7px; text-decoration:none;">Vorige</a></p>
    </div>
    <div class="bottom_prod_box_big"></div>                   
</div>