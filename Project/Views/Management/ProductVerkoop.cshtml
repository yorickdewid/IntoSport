@model Project.Models.MainView
@{
    ViewBag.Title = "ProductVerkoop";
}

<div class="prod_box_big">
    <div class="top_prod_box_big"></div>
    <div class="center_prod_box_big">
        <div class="product_title_big">Producten Verkoop</div>

        <table class="beheertab" style="width: 100%">
            <thead>
                <tr>
                    <th>Productnaam</th>
                    <th>Prijs</th>
                    <th>Aantal verkocht</th>
                    <th>Totaal</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.ListVerkoop.Count; i++)
                {
                    <tr>
                        <td>@Model.ListVerkoop[i].ProductNaam</td>
                        <td>&euro; @Model.ListVerkoop[i].Prijs</td>
                        <td>@Model.ListVerkoop[i].Aantal</td>
                        <td>&euro; @String.Format("{0:0.00}", (Model.ListVerkoop[i].Totaal))</td>
                    </tr>
                }
            </tbody>
        </table>

        <p><a href="/Management/Management" style="text-align: right; height: 27px; background-color: white; width: 195px; line-height: 27px; color: #1c4a52; border-radius: 10px; padding: 7px; text-decoration: none;">Vorige</a></p>
    </div>
    <div class="bottom_prod_box_big"></div>
</div>
