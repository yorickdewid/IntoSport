@model Project.Models.MainView

@{
    ViewBag.Title = "Registreren";
}

<div class="prod_box_big">
    <div class="top_prod_box_big"></div>
    <div class="center_prod_box_big">
    <div class="product_title_big">Registreren</div>
    @using (Html.BeginForm("Registreren", "Account"))
    {
        <table>
            <tr>
                <td style="width:35%"><div>Naam</div></td>
                <td><div>@Html.EditorFor(model=>model.gebruiker.Naam)
                         @Html.ValidationMessageFor(model=>model.gebruiker.Naam)</div></td>
            </tr>
            <tr>
                <td><div>Email</div></td>
                <td><div>@Html.EditorFor(model => model.gebruiker.Email)
                         @Html.ValidationMessageFor(model=>model.gebruiker.Email)</div></td>
            </tr>
            <tr>
                <td><div>Wachtwoord</div></td>
                <td><div>@Html.EditorFor(model => model.gebruiker.Wachtwoord)
                         @Html.ValidationMessageFor(model=>model.gebruiker.Wachtwoord)</div></td>
            </tr>
            <tr>
                <td><div>Adres</div></td>
                <td><div>@Html.EditorFor(model => model.gebruiker.Adres)
                         @Html.ValidationMessageFor(model=>model.gebruiker.Adres)</div></td>
            </tr>
            <tr>
                <td><div>Postcode</div></td>
                <td><div>@Html.EditorFor(model => model.gebruiker.Postcode)
                         @Html.ValidationMessageFor(model=>model.gebruiker.Postcode)</div></td>
            </tr>
            <tr>
                <td><div>Plaats</div></td>
                <td><div>@Html.EditorFor(model => model.gebruiker.Woonplaats)
                         @Html.ValidationMessageFor(model=>model.gebruiker.Woonplaats)</div></td>
            </tr>
            <tr>
                <td><div>Telefoon</div></td>
                <td><div>@Html.EditorFor(model => model.gebruiker.Telefoonnummer)
                         @Html.ValidationMessageFor(model=>model.gebruiker.Telefoonnummer)</div></td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td style="text-align:right"><input type = "submit" value = "Registreren" /></td>
            </tr>
        </table>
    }
    </div>
    <div class="bottom_prod_box_big"></div> 
</div>